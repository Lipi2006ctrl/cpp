#include <iostream>
using namespace std;

class Base {
protected:
    int x;
public:
    void readX() {
        cout << "Enter first number: ";
        cin >> x;
    }
};

class Derived1 : public Base {
protected:
    int y;
public:
    void readY() {
        cout << "Enter second number: ";
        cin >> y;
    }
};

class Derived2 : public Derived1 {
    int z;
public:
    void readZ() {
        cout << "Enter third number: ";
        cin >> z;
    }
    void product() {
        cout << "Product = " << (x * y * z) << endl;
    }
};

int main() {
    Derived2 obj;
    obj.readX();
    obj.readY();
    obj.readZ();
    obj.product();
    return 0;
}
