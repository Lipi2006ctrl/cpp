#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 2, 3, 4, 5, 6};
    int n = sizeof(arr)/sizeof(arr[0]);

    cout << "Even numbers in the array: ";
    for (int i = 0; i < n; i++) {
        if (arr[i] % 2 != 0)
            continue; 
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
