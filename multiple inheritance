#include <iostream>
using namespace std;

// Base class 1
class Employee {
public:
    int empId;
    string name;

    void getEmployeeDetails() {
        cout << "Enter Employee ID: ";
        cin >> empId;
        cout << "Enter Name: ";
        cin >> name;
    }
};

// Base class 2
class Salary {
public:
    float basic, hra, da;

    void getSalaryDetails() {
        cout << "Enter Basic Salary: ";
        cin >> basic;
        cout << "Enter HRA: ";
        cin >> hra;
        cout << "Enter DA: ";
        cin >> da;
    }
};

// Derived class (Multiple Inheritance)
class TotalSalary : public Employee, public Salary {
public:
    float gross;

    void calculateSalary() {
        gross = basic + hra + da;
    }

    void display() {
        cout << "\n--- Employee Salary Details ---\n";
        cout << "Employee ID: " << empId << endl;
        cout << "Name: " << name << endl;
        cout << "Basic: " << basic << endl;
        cout << "HRA: " << hra << endl;
        cout << "DA: " << da << endl;
        cout << "Gross Salary: " << gross << endl;
    }
};

int main() {
    TotalSalary t;
    t.getEmployeeDetails();
    t.getSalaryDetails();
    t.calculateSalary();
    t.display();
    return 0;
}
