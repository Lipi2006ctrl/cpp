#include <iostream>
using namespace std;

// Base class
class Person {
public:
    string name;
    int age;

    void getDetails() {
        cout << "Enter name: ";
        cin >> name;
        cout << "Enter age: ";
        cin >> age;
    }

    void showDetails() {
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
    }
};

// Derived class (Single Inheritance)
class Student : public Person {
public:
    int rollNo;
    float marks;

    void getStudentData() {
        cout << "Enter roll number: ";
        cin >> rollNo;
        cout << "Enter marks: ";
        cin >> marks;
    }

    void showStudentData() {
        cout << "Roll Number: " << rollNo << endl;
        cout << "Marks: " << marks << endl;
    }
};

int main() {
    Student s;
    s.getDetails();
    s.getStudentData();

    cout << "\n--- Student Details ---\n";
    s.showDetails();
    s.showStudentData();

    return 0;
}





