#include <iostream>
using namespace std;

template <class T>
class Array {
    T *arr;
    int size;
public:
    Array(T a[], int s) {
        size = s;
        arr = new T[size];
        for (int i=0; i<size; i++)
            arr[i] = a[i];
    }
    int getSize() { return size; }
    T getElement(int index) { return arr[index]; }
    void display() {
        for (int i=0; i<size; i++)
            cout << arr[i] << " ";
        cout << endl;
    }
    ~Array() { delete[] arr; }
};

int main() {
    int intArr[] = {1,2,3,4,5};
    Array<int> a1(intArr, 5);
    a1.display();

    float floatArr[] = {1.1, 2.2, 3.3};
    Array<float> a2(floatArr, 3);
    a2.display();

    char charArr[] = {'A','B','C'};
    Array<char> a3(charArr, 3);
    a3.display();

    return 0;
}
