#include <iostream>
using namespace std;

int main() {
    signed int a = -10;            
    unsigned int b = 10;           
    short int c = 32000;           
    long int d = 100000L;          
    long long int e = 9223372036854775807LL;  

    cout << "Signed int a = " << a << endl;
    cout << "Unsigned int b = " << b << endl;
    cout << "Short int c = " << c << endl;
    cout << "Long int d = " << d << endl;
    cout << "Long long int e = " << e << endl;

    cout << "\nSizes of each type in bytes:\n";
    cout << "Size of signed int: " << sizeof(a) << " bytes\n";
    cout << "Size of unsigned int: " << sizeof(b) << " bytes\n";
    cout << "Size of short int: " << sizeof(c) << " bytes\n";
    cout << "Size of long int: " << sizeof(d) << " bytes\n";
    cout << "Size of long long int: " << sizeof(e) << " bytes\n";

    return 0;
}
