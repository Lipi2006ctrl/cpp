#include <iostream>
using namespace std;

int main() {
    int a, b, c;
    cout << "Enter three numbers: ";
    cin >> a >> b >> c;


    if (a >= b) {
        if (a >= c) {
            cout << "Largest number is: " << a << endl;
        } else {
            cout << "Largest number is: " << c << endl;
        }
    } else {
        if (b >= c) {
            cout << "Largest number is: " << b << endl;
        } else {
            cout << "Largest number is: " << c << endl;
        }
    }

    if (a == b && b == c) {
        cout << "All three numbers are equal." << endl;
    } else if (a == b) {
        cout << "First and Second numbers are equal." << endl;
    } else if (a == c) {
        cout << "First and Third numbers are equal." << endl;
    } else if (b == c) {
        cout << "Second and Third numbers are equal." << endl;
    } else {
        cout << "No two numbers are equal." << endl;
    }

    return 0;
}
